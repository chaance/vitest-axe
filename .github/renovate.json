{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
      "config:base",
      "group:allNonMajor",
      ":separateMultipleMajorReleases",
      "schedule:earlyMondays",
      ":prConcurrentLimitNone",
      ":prHourlyLimitNone",
      "customManagers:githubActionsVersions"
    ],
  "dependencyDashboard": false,
  "reviewers": ["koralle"],
  "assignees": ["koralle"],
  "rebaseWhen": "conflicted",
  "addLabels": ["dependencies"],
  "timezone": "Asia/Tokyo",
  "enabledManagers": ["npm"],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "matchPackageNames": [
        "eslint",
        "eslint-*",
        "@eslint/*",
        "@types/eslint__js",
        "@vitest/eslint-plugin",
        "globals",
        "typescript-eslint"
      ],
      "addLabels": ["dependencies/linting"]
    },
    {
      "matchPackageNames": [
        "vitest",
        "jsdom",
        "@vitest/eslint-plugin"
      ],
      "addLabels": ["dependencies/testing"]
    },
    {
      "matchPackageNames": [
        "typescript",
        "@tsconfig/strictest",
        "@types/*"
      ],
      "addLabels": ["dependencies/typescript"]
    },
    {
      "matchPackageNames": [
        "@eslint/compat",
        "@eslint/js",
        "@tsconfig/strictest",
        "@types/eslint__js",
        "@types/node",
        "@vitest/eslint-plugin",
        "axe-core",
        "chalk",
        "es-toolkit",
        "eslint",
        "eslint-import-resolver-node",
        "eslint-import-resolver-typescript",
        "eslint-plugin-import",
        "globals",
        "jsdom",
        "lefthook",
        "prettier",
        "pretty-format",
        "tsup",
        "typescript",
        "typescript-eslint",
        "vitest"
      ],
      "rangeStrategy": "bump"
    }
  ]
}
