{
  "include": ["src/*.ts", "tests/*.ts", "tsup.config.ts", "eslint.config.mjs", "vitest.config.ts"],
  "exclude": [
    "dist",
    "node_modules",
  ],
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "types": ["vitest/globals"],
    "allowJs": true
  }
}
